{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**", "cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "anvil": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "extract-abi": {
      "dependsOn": ["contracts#build"],
      "outputs": ["app/abi/**"],
      "inputs": ["contracts/out/**"]
    },
    "format": {
      "cache": false,
      "persistent": false
    },
    "format:fix": {
      "cache": false,
      "persistent": false
    }
  }
}
